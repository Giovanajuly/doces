CREATE DATABASE doce;
USE doce;
CREATE TABLE doce (
	id_doce INT PRIMARY KEY AUTO_INCREMENT,
    doce_nome VARCHAR(150),
    doce_descricao TEXT,
    doce_valor DECIMAL(10, 2),
    doce_imagem VARCHAR(150)

);

SELECT * FROM doce;
